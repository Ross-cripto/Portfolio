---
// Experiences.astro
export interface Experience {
  dates: string;
  role: string;
  company: string;
  description: string;
  logo: string;
}

export interface Props {
  experiences: Experience[];
}

const { experiences } = Astro.props;
---

<section class="max-w-4xl mx-auto px-7 lg:px-">
<div
class="grid items-stretch w-full grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-7 mt-7"
>
  {experiences.map((experience) => (
    <div class="flex items-start space-x-4" id={experience.company}>
      <img src={experience.logo} alt={experience.company} class="w-12 h-12 rounded-full" />
      <div>
        <h3 class="text-lg font-semibold dark:text-white">{experience.role}</h3>
        <p class="text-sm text-neutral-600 dark:text-neutral-400">{experience.company} Â· {experience.dates}</p>
        <p class="text-sm text-neutral-500 dark:text-neutral-300">{experience.description}</p>
      </div>
    </div>
  ))}
</div>
</section>
